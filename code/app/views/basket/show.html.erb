<h1 class="stamp">Shopping Basket</h1>

<table class="table">
  <tr>
    <th>Product</th>
    <th class="text-right">Price</th>
    <th></th>
  </tr>

<% @basket.items.each do |item| %>
  <tr>
    <td><%= item.product.name %></td>
    <td class="text-right"><%= number_to_currency(item.price, :unit => "£") %></td>
    <td class="actions">
      <%= link_to 'Remove', basket_remove_path(:item_id => item), confirm: "Are you sure you want to remove '#{item.product.name}' from your basket?", method: :post, :class => 'btn btn-danger' %>
    </td>
  </tr>
<% end %>

  <tr>
    <td class="text-right">Total:</td>
    <td class="text-right"><b><%= number_to_currency(@basket.total_price, :unit => "£") %></b></td>
    <td></td>
  </tr>
</table>

<br />

<div class="actions">
  <%= link_to 'Continue Shopping', merchandise_path, :class => 'btn' %>
  <%= link_to 'Checkout', basket_checkout_path, :class => 'btn btn-success' %>
</div>